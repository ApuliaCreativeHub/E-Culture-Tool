<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="50dp"
    android:layout_marginEnd="4dp"
    android:orientation="horizontal">

    <!-- DO NOT REMOVE THIS TAG -->
    <LinearLayout
        android:id="@+id/pathContainerLeftDropImage"
        android:layout_width="15dp"
        android:tag="LEFT"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/outline_linear_scale_black_20"
            android:contentDescription="@string/place_image" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pathCircleImage"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:ignore="MissingConstraints" />

    <!-- DO NOT REMOVE THIS TAG -->
    <LinearLayout
        android:id="@+id/pathContainerRightDropImage"
        android:tag="RIGHT"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/arrowLinkIcon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/outline_linear_scale_black_20"
            android:contentDescription="@string/arrow" />

    </LinearLayout>

</LinearLayout>