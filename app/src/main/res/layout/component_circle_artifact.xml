<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:layout_marginRight="4dp"
    android:orientation="horizontal">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pathCircleImage"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/pathContainerDropImage"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/arrowLinkIcon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/outline_trending_flat_black_48"
            />
    </LinearLayout>
</LinearLayout>